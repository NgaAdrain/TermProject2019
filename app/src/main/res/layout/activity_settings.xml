<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:rowCount="5"
        android:columnCount = "2">

        <TextView
            android:layout_rowSpan="5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#9E5555"
            android:backgroundTint="#204FCE"
            android:foregroundTint="#00FFFFFF"
            android:gravity="center"
            android:text="Settings"
            android:textColor="#FAF8F8"
            android:textSize="50sp" />

        <Switch
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#03A9F4"
            android:backgroundTint="#082A88"
            android:text="Background Music"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Switch
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#00BCD4"
            android:backgroundTint="#A1B9E9"
            android:text="Effect Sound"
            android:textSize="20sp" />

        <Switch
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#00BCD4"
            android:backgroundTint="#082A87"
            android:text="Switch3"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Switch
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#00BCD4"
            android:backgroundTint="#A0B8E8"
            android:text="Switch4"
            android:textSize="20sp" />

        <Switch
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#00BCD4"
            android:backgroundTint="#082A86"
            android:text="Switch5"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </GridLayout>
</android.support.constraint.ConstraintLayout>