<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.GameMode">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/GameModeButton"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#2196F3"
            android:backgroundTint="#2196F3"
            android:foregroundTint="#00FFFFFF"
            android:gravity="center"
            android:text="Game\nMode"
            android:textSize="80sp" />

        <Button
            android:id="@+id/ModeButton1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#03A9F4"
            android:backgroundTint="#204FCE"
            android:text="Fortress\nMode"
            android:textSize="40sp" />

        <Button
            android:id="@+id/ModeButton2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#00BCD4"
            android:backgroundTint="#00BCD4"
            android:text="Evasion\nMode"
            android:textSize="40sp" />

        <Button
            android:id="@+id/ModeButton3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#03A9F4"
            android:backgroundTint="#204FCE"
            android:text="Combination\nMode"
            android:textSize="40sp" />


    </GridLayout>

</android.support.constraint.ConstraintLayout>